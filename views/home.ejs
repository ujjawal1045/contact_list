<html>
    <head>
        <title>
             <%= title %>
         </title>  
         <link rel="stylesheet" href="/css/home.css">
         <script src="https://kit.fontawesome.com/e7f0e009a9.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <!-- <h1>Render from Ejs Views!</h1> -->
        
            
            <h1 id="page-heading">
                <i class="fas fa-address-book"></i>
                My Contact list
            </h1>

        
        
        <div id="naph">
            <ul class="horizontal-list">
                <% for (let i of contacts_list ) { %>
                    <li class="contact"> 
                        <div class="details">
                            <p><%= i.name %></p>
                         
                            <p><%= i.phone %></p>

                        </div>

                        <div class="delete-btn">
                            <a href="/delete-contact/?id=<%= i._id %>">
                                <i class="fas fa-user-times"></i>
                            </a>
                        </div>
                    </li>
                   
                     <% } %>
            </ul>
        </div>

        <form action="./create-contact"method="POST">
            <input type="text" name="name" placeholder="Enter Name" required>
            <input type="text" name="phone" placeholder="Enter phone" required>

            <button type="submit"> Add Contacts </button>
        </form>
        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>